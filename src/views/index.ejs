<body>
  <button id="getInfo">获取信息</button>
  <div id="text"></div>
  <p><%= content%></p>
  <script>
    const getInfoBtn = document.getElementById('getInfo');
    const textDiv = document.getElementById('text');
    getInfoBtn.addEventListener('click', getInfo);
    function getInfo(){
      const request = fetch('http://localhost:4000/old/test?a=12&b=king').then((res) => {
        return res.text();
      }).then((text) => {
        textDiv.innerText = text;
      })
    }
  </script>
</body>

</html>